{# templates/quest/quest_list.html.twig #}

{% extends 'base.html.twig' %}


{% block title %}Quest List{% endblock %}

{% block content %}
<h1>Quest List</h1>
<ul>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for quest in quests %}
            <tr>
                <td>{{ quest.id }}</td>
                <td>{{ quest.name }}</td>
                <td>{{ quest.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</ul>

{% endblock %}